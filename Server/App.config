<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="tcpBindingConfig"
						 transferMode="Streamed"
						 maxReceivedMessageSize="10485760"
						 closeTimeout="00:01:00"
						 openTimeout="00:01:00"
						 receiveTimeout="00:10:00"
						 sendTimeout="00:10:00">
				</binding>
			</netTcpBinding>
		</bindings>

		<services>
			<service name="Server.WeatherService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000/WeatherService"/>
					</baseAddresses>
				</host>
				<endpoint
					address=""
					binding="netTcpBinding"
					bindingConfiguration="tcpBindingConfig"
					contract="Common.IWeatherService"/>
			</service>
		</services>
	</system.serviceModel>
</configuration>
